{
    "manifest_version": 3,
    "name": "Cute pet",
    "description": "Put a pet gif at the left bottom corner",
    "author": "Yuyi Hao",
    "version": "1.0",
    "action": {
        "default_title": "Toggle on and off"
    },
    "content_scripts":[
        {
            "js": ["scripts/content.js"],
            "matches": ["<all_urls>"]
        }
    ],
    "permissions":[
        "activeTab",
        "scripting"
    ],
    "background":{
        "service_worker": "scripts/background.js"
    },
    "web_accessible_resources": [
        {
            "matches": ["<all_urls>"],
            "resources": ["style/*", "images/*"]
        }
    ]
}